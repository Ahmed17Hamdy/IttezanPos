<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IttezanPos.Views.MainPage.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tr="clr-namespace:IttezanPos.Helpers"
    BackgroundColor="#33b54b"
    FlowDirection="MatchParent"
    mc:Ignorable="d">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="NormalTextColor">Black</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>

        <Grid ColumnSpacing="0" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Frame
                Grid.Row="0"
                Grid.Column="1"
                Margin="5,5,2.5,2.5"
                Padding="5"
                CornerRadius="5">
                <Grid HorizontalOptions="Center" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Margin="5,10,5,0"
                        Aspect="AspectFit"
                        Source="SALES.png" />
                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{tr:Translate Purchase}"
                        TextColor="{StaticResource NormalTextColor}"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
            <Frame
                Grid.Row="0"
                Grid.Column="0"
                Margin="2.5,5,5,2.5"
                Padding="5"
                CornerRadius="5">
                <Grid HorizontalOptions="Center" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Margin="5,10,5,0"
                        Aspect="AspectFit"
                        Source="Purchase.png" />
                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{tr:Translate Sales}"
                        TextColor="{StaticResource NormalTextColor}"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
            <Frame
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,2.5,2.5,2.5"
                Padding="5"
                CornerRadius="5">
                <Grid HorizontalOptions="Center" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Margin="5,10,5,0"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        Source="Suppliers.png"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{tr:Translate Suppliers}"
                        TextColor="{StaticResource NormalTextColor}"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
            <Frame
                x:Name="ClientFrame"
                Grid.Row="1"
                Grid.Column="0"
                Margin="2.5,2.5,5,2.5"
                Padding="5"
                CornerRadius="5">

                <Grid HorizontalOptions="Center" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Margin="5,10,5,0"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        Source="Clients.png"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{tr:Translate Customers}"
                        TextColor="{StaticResource NormalTextColor}"
                        VerticalOptions="Center" />
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Client_Tapped" />
                </Frame.GestureRecognizers>
            </Frame>
            <Frame
                Grid.Row="2"
                Grid.Column="1"
                Margin="5,2.5,2.5,2.5"
                Padding="5"
                CornerRadius="5">
                <Grid HorizontalOptions="Center" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Margin="5,10,5,0"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        Source="Expenses.png"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{tr:Translate Expense}"
                        TextColor="{StaticResource NormalTextColor}"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
            <Frame
                Grid.Row="2"
                Grid.Column="0"
                Margin="2.5,2.5,5,2.5"
                Padding="5"
                CornerRadius="5">
                <Grid HorizontalOptions="Center" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Margin="5,10,5,0"
                        HorizontalOptions="Center"
                        Source="Box.png"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{tr:Translate Reservoir}"
                        TextColor="{StaticResource NormalTextColor}"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
            <Frame
                Grid.Row="3"
                Grid.Column="1"
                Margin="5,2.5,2.5,2.5"
                Padding="5"
                CornerRadius="5">
                <Grid HorizontalOptions="Center" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Margin="5,10,5,0"
                        HorizontalOptions="Center"
                        Source="Reports.png"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{tr:Translate Reports}"
                        TextColor="{StaticResource NormalTextColor}"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
            <Frame
                Grid.Row="3"
                Grid.Column="0"
                Margin="2.5,2.5,5,2.5"
                Padding="5"
                CornerRadius="5">
                <Grid HorizontalOptions="Center" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Margin="5,10,5,0"
                        HorizontalOptions="Center"
                        Source="Inventory.png"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{tr:Translate Inventory}"
                        TextColor="{StaticResource NormalTextColor}"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>